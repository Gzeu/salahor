{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "module": "ESNext",
    "types": ["node", "@types/ws"],
    "baseUrl": ".",
    "paths": {
      "@salahor/core": ["../../../packages/core/dist/index.d.ts"],
      "@salahor/*": ["../../../packages/*/src"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../../../node_modules/@types"
    ],
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
