{
  "name": "@salahor/react-devtools",
  "version": "5.0.0",
  "description": "React DevTools for debugging Salahor event streams",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc && tsc --project tsconfig.esm.json",
    "dev": "tsc --watch --preserveWatchOutput",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepack": "npm run clean && npm run build",
    "preview": "vite build --mode development && vite preview --port 3000"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "@salahor/core": "workspace:*"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "@salahor/core": {
      "optional": false
    }
  },
  "dependencies": {
    "@salahor/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "salahor",
    "react",
    "devtools",
    "debugging",
    "event-stream",
    "reactive",
    "state-management",
    "react-hooks",
    "developer-tools",
    "monitoring",
    "analytics"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Gzeu/salahor.git",
    "directory": "packages/frontend/react-devtools"
  },
  "bugs": {
    "url": "https://github.com/Gzeu/salahor/issues"
  },
  "homepage": "https://github.com/Gzeu/salahor/tree/main/packages/frontend/react-devtools",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
