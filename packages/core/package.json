{
  "name": "@salahor/core",
  "version": "3.1.0",
  "description": "Zero-dependency universal connectors between Events, EventTargets and AsyncIterables. High-performance reactive streams for modern applications.",
  "keywords": [
    "events",
    "async-iterable",
    "reactive",
    "streams",
    "observable",
    "salahor",
    "core",
    "typescript",
    "esm",
    "zero-dependency",
    "performance",
    "event-stream",
    "async-iterator",
    "event-target",
    "browser",
    "nodejs",
    "universal"
  ],
  "author": {
    "name": "Gzeu",
    "email": "pricopgeorge@gmail.com",
    "url": "https://github.com/Gzeu"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gzeu/salahor.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/Gzeu/salahor/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/Gzeu/salahor/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/Gzeu"
  },
  "type": "module",
  "main": "dist/event-stream.js",
  "module": "dist/event-stream.js",
  "types": "dist/event-stream.d.ts",
  "exports": {
    ".": {
      "types": "./dist/event-stream.d.ts",
      "import": "./dist/event-stream.js"
    },
    "./event-stream": {
      "types": "./dist/event-stream.d.ts",
      "import": "./dist/event-stream.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.17.6",
    "typescript": "^5.6.3",
    "rimraf": "^5.0.10",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "prettier": "^3.3.3"
  },
  "scripts": {
    "prebuild": "pnpm run clean",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "preversion": "pnpm run test && pnpm run lint",
    "dev": "tsc -p tsconfig.build.json --watch"
  }
}