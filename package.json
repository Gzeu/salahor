{
  "name": "salahor-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Zero-dependency universal connectors between Events, EventTargets and AsyncIterables",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter './packages/*' run build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",
    "clean": "pnpm -r run clean",
    "lint": "eslint -c .eslintrc.cjs \"packages/*/src/**/*.{ts,tsx,js,jsx}\" --no-error-on-unmatched-pattern --max-warnings=50",
    "lint:fix": "eslint -c .eslintrc.cjs \"packages/*/src/**/*.{ts,tsx,js,jsx}\" --no-error-on-unmatched-pattern --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "fix-all": "pnpm run format && pnpm run lint:fix",
    "typecheck": "tsc --noEmit",
    "size": "size-limit",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "events",
    "async-iterable",
    "streams",
    "reactive",
    "typescript",
    "zero-dependency"
  ],
  "author": "Gzeu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gzeu/salahor.git"
  },
  "bugs": {
    "url": "https://github.com/Gzeu/salahor/issues"
  },
  "homepage": "https://github.com/Gzeu/salahor#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/node": "^20.17.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "rimraf": "^5.0.10",
    "size-limit": "^11.1.4",
    "@size-limit/file": "^11.1.4"
  }
}