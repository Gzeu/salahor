{
  "name": "salahor-monorepo",
  "version": "0.6.0",
  "private": true,
  "description": "Modern zero-dependency universal connectors between Events, EventTargets and AsyncIterables with advanced security and performance",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/protocol-connectors/*",
    "packages/frontend/*",
    "packages/backend/*"
  ],
  "scripts": {
    "prepare": "pnpm -r run prepare",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test --coverage",
    "test:security": "pnpm audit && pnpm -r run test:security",
    "build": "pnpm -r build",
    "build:production": "NODE_ENV=production pnpm -r build",
    "clean": "pnpm -r clean",
    "clean:all": "node scripts/clean.js",
    "lint": "pnpm -r lint",
    "lint:security": "pnpm -r run lint:security",
    "typecheck": "pnpm -r typecheck",
    "benchmark": "pnpm -r benchmark",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:check": "pnpm -r run security:check",
    "performance:measure": "pnpm -r run performance:measure"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "keywords": [
    "events",
    "eventtarget",
    "async-iterable",
    "stream",
    "connector",
    "zero-dependency",
    "reactive",
    "observable",
    "async",
    "worker",
    "webworker",
    "performance",
    "security",
    "modern",
    "typescript",
    "esm"
  ],
  "author": "Gzeu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gzeu/salahor.git"
  },
  "bugs": {
    "url": "https://github.com/Gzeu/salahor/issues"
  },
  "homepage": "https://github.com/Gzeu/salahor#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@eslint/js": "^9.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^2.0.4",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "concurrently": "^9.1.0",
    "npm-run-all2": "^6.2.6",
    "cross-env": "^7.0.3"
  }
}