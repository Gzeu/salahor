{
  "name": "salahor-monorepo",
  "version": "0.5.0",
  "private": true,
  "description": "Monorepo for Salahor - Zero-dependency universal connectors between Events, EventTargets and AsyncIterables",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/protocol-connectors/*",
    "packages/frontend/*",
    "packages/backend/*"
  ],
  "scripts": {
    "prepare": "pnpm -r run prepare",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test --coverage",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "clean:all": "node scripts/clean.js",
    "lint": "pnpm -r lint",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7.0.0"
  },
  "keywords": [
    "events",
    "eventtarget",
    "async-iterable",
    "stream",
    "connector",
    "zero-dependency",
    "reactive",
    "observable",
    "async",
    "worker",
    "webworker"
  ],
  "author": "Gzeu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gzeu/salahor.git"
  },
  "bugs": {
    "url": "https://github.com/Gzeu/salahor/issues"
  },
  "homepage": "https://github.com/Gzeu/salahor#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6",
    "vitest": "^0.34.3"
  }
}